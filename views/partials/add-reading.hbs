<form class="box" action="/station/{{station._id}}/addReading" method="POST">
  <label>Enter Weather Code</label>
  <div class="select is-normal">
         <select name="weatherCode">
                    <option value="100">Clear</option>
                    <option value="200">Partial Clouds</option>
                    <option value="300">Cloudy</option>
                    <option value="400">Light Showers</option>
                    <option value="500">Heavy Showers</option>
                    <option value="600">Rain</option>
                    <option value="700">Snow</option>
                    <option value="800">Thunder</option>
                </select>
  </div>

  <label>Enter Temperature</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Temperature" name="temp">
      </div>
    </div>
  </div>

  <label>Enter Wind Speed</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Wind Speed" name="windSpeed">
      </div>
    </div>
  </div>

  <label>Enter Pressure</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Pressure" name="pressure">
      </div>
    </div>
  </div>

  <button class="button is-primary">Add Reading</button>
</form>