<table class="table is-fullwidth">
    <thead>
        <tr>
            <th>Date and Time</th>
            <th>weatherCode</th>
            <th>Temperature Celsius</th>
            <th>Wind Speed</th>
            <th>Pressure</th>
        </tr>
    </thead>
    <tbody>
        {{#each station.readings}}
        <tr>
            <td>
                {{date}}
                {{time}}
            </td>
            <td>
                {{weatherCode}}
            </td>
            <td>
                {{temp}}
            </td>
            <td>
                {{windSpeed}}

            </td>
            <td>
                {{pressure}}
            </td>

            <td>
                <a href="/station/{{../station._id}}/deletereading/{{_id}}" class="button">
                    {{>icons/delete-icon}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>