<div class="columns">
    <div class="column is-one-fifth">
        <div class="card-content has-background-black has-text-white has-text-centered">
            {{> icons/weather-icons/location}} <br>
            <span class="is-size-3"> {{station.title}} </span> <br>
            <span class="is-size-6"> Latitude: {{station.latitude}} <br>
                Longitude: {{station.longitude}} </span> <br>
        </div>
    </div>
    <div class="column is-one-fifth">
        <div class="card-content has-background-black has-text-white has-text-centered">
            {{> icons/weather-icons/weather-code}} <br>
            <span class="is-size-3"> Weather </span> <br>
            <span class="is-size-6"> {{latestReading.weather}} </span>

        </div>
    </div>
    <div class="column is-one-fifth">
        <div class="card-content has-background-black has-text-white has-text-centered">
            {{> icons/weather-icons/temperature}} <br>
            <span class="is-size-3"> Temperature </span> <br>

            <span class="is-size-6"> {{latestReading.temp}} Â°C </span> <br>
            <span class="is-size-6"> {{latestReading.temperatureFahrenheit}} F </span> <br> <br>
            <span class="is-size-6"> Min Temperature: {{minTemp}} </span> <br>
            <span class="is-size-6"> Max Temperature: {{maxTemp}} </span> <br> <br>
            <span class="is-size-6"> Trend: {{tempTrend}} </span> <br>

            {{#if risingTrendTemp}}
            {{> icons/trends-icons/up-arrow}}
            {{/if}}

            {{#if fallingTrendTemp}}
            {{> icons/trends-icons/down-arrow}}
            {{/if}}
        </div>
    </div>


    <div class="column is-one-fifth">
        <div class="card-content has-background-black has-text-white has-text-centered">
            {{> icons/weather-icons/pressure}} <br>
            <span class="is-size-3"> Pressure </span> <br>

            <span class="is-size-6"> {{latestReading.pressure}} hpa </span> <br> <br>
            <span class="is-size-6"> Min Pressure: {{minPressure}} </span> <br>
            <span class="is-size-6"> Max Pressure: {{maxPressure}} </span> <br> <br>
            <span class="is-size-6"> Pressure Trend: {{pressureTrend}} </span> <br>

            {{#if risingTrendPressure}}
            {{> icons/trends-icons/up-arrow}}
            {{/if}}

            {{#if fallingTrendPressure}}
            {{> icons/trends-icons/down-arrow}}
            {{/if}}
        </div>
    </div>
    <div class="column is-one-fifth">
        <div class="card-content has-background-black has-text-white has-text-centered">
            {{> icons/weather-icons/wind}} <br>
            <span class="is-size-3"> Wind </span> <br>
            <span class="is-size-6"> Speed: {{latestReading.windSpeed}} km/h </span> <br>
            <span class="is-size-6"> Conditions : {{latestReading.beaufort}} </span> <br>
            <span class="is-size-6"> Wind Direction: {{latestReading.windDirection}} </span> <br>
            <span class="is-size-6"> Wind Chill: {{latestReading.windChill}} </span> <br><br>
            <span class="is-size-6"> Max Wind Speed: {{minWindSpeed}} </span> <br>
            <span class="is-size-6"> Max Wind Speed: {{maxWindSpeed}} <br> </span> <br>
            <span class="is-size-6"> Wind Trend: {{windSpeedTrend}} </span> <br>

            {{#if risingTrendWindSpeed}}
            {{> icons/trends-icons/up-arrow}}
            {{/if}}

            {{#if fallingTrendWindSpeed}}
            {{> icons/trends-icons/down-arrow}}
            {{/if}}
        </div>
    </div>

</div>